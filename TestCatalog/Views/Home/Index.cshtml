@{
    ViewBag.Title = "Home Page";
}
<div class="row" ng-controller="usersController">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 main-block">
        <div class="panel panel-default" style="overflow-y: auto; overflow-x: hidden;">
            <table class="table table-responsive table-striped table-condensed">
                <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Страна</th>
                    <th>Телефон</th>
                    <th class="text-right">
                        <span class="badge">{{total}}</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="user in users">
                    <td style="width: 33%">
                        <input ng-model="user.fio" required ng-change="saveUser(user)" ng-model-options="{updateOn: 'blur'}" type="text" name="fio" class="form-control" style="padding-left: 5px"/>
                    </td>
                    <td style="width: 33%">
                        <select ng-model="user.countryID" ng-selectpicker="user.country" ng-change="saveUser(user)" required class="form-control" type="text"></select>
                    </td>
                    <td style="width: 33%">
                        <input ng-model="user.phone" ng-phone required ng-change="saveUser(user)" ng-model-options="{updateOn: 'blur'}" type="text" class="form-control" />
                    </td>
                    <td>
                        {{user.countryID}}
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="panel-footer">
                <ul class="pagination pagination-sm" style="margin: 0">
                    <li ng-repeat="page in pages">
                        <a ng-click="getUsers(page)">
                            {{page}}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
