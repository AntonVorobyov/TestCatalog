@{
    ViewBag.Title = "Home Page";
}
<div class="row" ng-controller="usersController">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 main-block">
        <div class="panel panel-default" style="overflow-y: auto; overflow-x: hidden;">
            <table class="table table-responsive table-striped table-condensed">
                <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Страна</th>
                    <th>Телефон</th>
                    <th class="text-right">
                        <span class="badge">{{total}}</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="user in users">
                    <td style="width: 33%">
                        <input type="text" class="form-control" value="{{user.fio}}" style="margin-left: 10px; margin-right: 5px"/>
                    </td>
                    <td style="width: 33%">
                        <select ng-selectpicker class="form-control" type="text"></select>
                    </td>
                    <td style="width: 33%">
                        <input ng-phone type="text" class="form-control" value="{{user.phone}}"/>
                    </td>
                    <td></td>
                </tr>
                </tbody>
            </table>
            <div class="panel-footer">
                <ul class="pagination pagination-sm" style="margin: 0">
                    <li ng-repeat="page in pages">
                        <a ng-click="getUsers(page)">
                            {{page}}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
